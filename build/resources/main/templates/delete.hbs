{{#partial "content"}}
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="../../">SparkBlog</a>
                <a class="new-entry button button-round" href="../../new"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Delete Entry</h2>
                <p>If you are sure, you want to delete the entry
                    called <b>{{entry.title}}</b>, presse the delete button.</p>

                <form action="/{{entry.slug}}/delete" method="post">

                    <input type="submit" value="Delete Entry" class="button">
                    <a href="#" class="button button-secondary">Cancel</a>

                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{>base.hbs}}