{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list">
                {{#each entries}}
                    <article>
                  <!--      <h2><a href="detail.html">{{title}}</a></h2> -->
                        <h2><a href="/details/{{slug}}">{{title}}</a></h2>
                        <h3>{{author}}</h3>
                        <time datetime="2016-01-31 1:00">{{date}}</time>
                    </article>
                {{/each}}
            </div>
            <div>
                <a href="new">Add a new blog post here</a><br>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}